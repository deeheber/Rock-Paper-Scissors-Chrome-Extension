{
  "manifest_version": 2,

  "name": "Rock Paper Scissors",
  "author": "Danielle Heberling",
  "description": "A computerized version of a classic game.",
  "version": "2.0",

  "background": {
      "scripts": ["app.js"],
      "persistent": false
  },
  "icons": {
                "48":"icon-48.png"
        },
  "browser_action": {
    "default_icon": "icon-48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"

  ]
}
