{
  "manifest_version": 2,

  "name": "Rock Paper Scissors",
  "author": "Danielle Heberling",
  "description": "This extension is a game of chance to play when you're bored and don't have much time",
  "version": "1.0",

  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },
  "icons": {  
                "48":"icon-48.png"
        }, 
  "browser_action": {
    "default_icon": "icon-48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
    
  ]
}